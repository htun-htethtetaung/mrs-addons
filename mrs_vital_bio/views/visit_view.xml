<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_mrs_visit_allergy_form">
        <field name="name">mrs.visit.allergy</field>
        <field name="model">mrs.visit</field>
        <field name="inherit_id" ref="mrs_mrs.view_mrs_visit_form" />
        <field name="arch" type="xml">
            <page id="mrs_visit_second_page" position="after">
                <page id="mrs_vital_biometric_lines" string="Vitals &amp; Biometrics">
                    <div>
                        <label for="vital_ids" string="Vitals"/>
                    </div>
                    <div>
                        <field name="vital_ids"
                            widget="section_and_note_one2many"
                            readonly="state!='START'"
                            mode="tree">
                            <tree editable="bottom">
                                <field name="recorded_date" />
                                <field name="temperature" />
                                <field name="blood_pressure" />
                                <field name="pulse" />
                                <field name="respiration_rate" />
                                <field name="spo_two" />
                            </tree>
                        </field>
                    </div>
                    <div>
                        <label for="biometric_ids" string="Biometrics"/>
                    </div>
                    <div>
                        <field name="biometric_ids"
                            widget="section_and_note_one2many"
                            readonly="state!='START'"
                            mode="tree">
                            <tree editable="bottom">
                                <field name="recorded_date" />
                                <field name="weight" />
                                <field name="height" />
                                <field name="bmi" />
                                <field name="muac" />
                            </tree>
                        </field>
                    </div>
                </page>
            </page>
        </field>
    </record>
</odoo>
