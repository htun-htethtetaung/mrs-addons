<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mrs_allergen_form" model="ir.ui.view">
        <field name="name">Allergen</field>
        <field name="model">mrs.allergen</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                        </group>
                        <group>
                            <field name="type" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_mrs_allergen_list" model="ir.ui.view">
        <field name="name">Allergen</field>
        <field name="model">mrs.allergen</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="type" />
            </tree>
        </field>
    </record>
    <record id="mrs_allergen_action" model="ir.actions.act_window">
        <field name="name">Allergen</field>
        <field name="res_model">mrs.allergen</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Add a new Allergen
            </p><p>
            Create Allergen
            </p>
        </field>
    </record>
</odoo>
