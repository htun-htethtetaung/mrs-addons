<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mrs_visit_form" model="ir.ui.view">
        <field name="name">Medical History</field>
        <field name="model">mrs.visit</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="patient_id" />
                            <field name="doctor_id" />
                        </group>
                        <group>
                            <field name="start_date" />
                            <field name="end_date" />
                        </group>
                    </group>
                    <notebook >
                        <page id="mrs_prescription_lines" string="Prescription">
                            <field name="prescription_order_ids"
                                widget="section_and_note_one2many"
                                mode="tree">
                                <tree>
                                    <field name="product_id" />
                                    <field name="quantity" />
                                    <field name="uom_id" />
                                    <field name="dose_free_text" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <!-- Attachment preview -->
                <div class="o_attachment_preview" />
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_mrs_visit_list" model="ir.ui.view">
        <field name="name">Medical History</field>
        <field name="model">mrs.visit</field>
        <field name="arch" type="xml">
            <tree>
                <field name="patient_id" />
                <field name="doctor_id" />
                <field name="start_date" />
                <field name="end_date" />
            </tree>
        </field>
    </record>
    <record id="mrs_visit_action" model="ir.actions.act_window">
        <field name="name">Medical History</field>
        <field name="res_model">mrs.visit</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Add a new Medical History
            </p><p>
            Create car
            </p>
        </field>
    </record>
</odoo>