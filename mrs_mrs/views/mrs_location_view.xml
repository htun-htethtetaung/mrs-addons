<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mrs_location_form" model="ir.ui.view">
        <field name="name">MRS Location</field>
        <field name="model">mrs.location</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="address"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_mrs_location_list" model="ir.ui.view">
        <field name="name">MRS Location</field>
        <field name="model">mrs.location</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="address"/>
            </tree>
        </field>
    </record>
    <record id="mrs_location_action" model="ir.actions.act_window">
        <field name="name">MRS Location</field>
        <field name="res_model">mrs.location</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Add a new MRS Location
            </p><p>
            Create MRS Location
            </p>
        </field>
    </record>
</odoo>