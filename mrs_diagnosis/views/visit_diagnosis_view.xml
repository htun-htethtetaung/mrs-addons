<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_mrs_visit_allergy_form">
        <field name="name">mrs.visit.allergy</field>
        <field name="model">mrs.visit</field>
        <field name="inherit_id" ref="mrs_mrs.view_mrs_visit_form" />
        <field name="arch" type="xml">
            <page id="mrs_visit_first_page" position="before">
                <page id="mrs_condition_lines" string="Conditions" sequence="10">
                    <div>
                        <field name="condition_ids"
                            widget="section_and_note_one2many"
                            readonly="state=='ENDED'"
                            mode="tree">
                            <tree editable="bottom">
                                <field name="diagnosis_id" />
                                <field name="start_date" />
                                <field name="state" />
                                <field name="active" />
                            </tree>
                        </field>
                    </div>
                </page>
            </page>
        </field>
    </record>
</odoo>
